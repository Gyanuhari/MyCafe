@model MyCafe.Models.MenuItem
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="col-md-6 col-lg-4 mb-4 py-3" onmouseover="$(this).css('background-color','LightCyan')" onmouseleave="$(this).css('background-color','white')">
    <div class="card mb-3" style="height:100%; width:100%; background:url('/images/CardBackGround.png')">
        <div class="card-title text-center text-primary mb-n3 pt-2">
            <h4><strong>@Model.Name</strong></h4>
        </div>
        <div class="card-body ">
            <div class="d-flex justify-content-between">
                <div><p>Price per Serve:</p></div>
                <div class="text-danger"><label class="badge-pill badge-danger">$@Model.Price</label></div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <div><label class="badge badge-primary">@Model.SubCategory.Name</label></div>
                @if (Convert.ToInt32(Model.Spicyness) == 1)
                {
                    <div>
                        <label class="badge badge-primary">Little Spicy</label>
                    </div>
                }
                else
                {
                    @if (Convert.ToInt32(Model.Spicyness) == 2)
                    {
                        <div>
                            <label class="badge badge-primary">More Spicy</label>
                        </div>
                    }
                    /**/
                }
            </div>
            <img src="@Model.Image" class="card-img-top" />
        </div>
        <div class="card-footer">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-square btn-lg form-control">Details</a>
        </div>
    </div>
</div>
