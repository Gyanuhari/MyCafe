@using MyCafe.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="form-group row">
    <div class="col-12">
        <a class="btn btn-primary form-control" asp-action="Index">Profile</a>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <a class="btn btn-primary form-control" asp-action="ChangePassword">Password</a>
    </div>
</div>

@if (hasExternalLogins)
{
    <div class="form-group row">
        <div class="col-12">
            <a class="btn btn-primary form-control" asp-action="ExternalLogins">External logins</a>
        </div>
    </div>
}
<div class="form-group row">
    <div class="col-12">
        <a class="btn btn-primary form-control" asp-action="TwoFactorAuthentication">Two-factor authentication</a>
    </div>
</div>




