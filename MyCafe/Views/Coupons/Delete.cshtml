@model MyCafe.Models.Coupons
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="backgroundWhite border">
    <form method="post" asp-action="Delete">
        <div class="row">
            <div class="col-12 text-center">
                <h4 class="text-primary"><strong>Delete Coupons</strong></h4>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-center">
                @{
                    var base64 = Convert.ToBase64String(Model.Picture);
                    var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@imgSrc" style="height:100px; width:100%;" />
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <fieldset disabled>
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <label asp-for="CouponType"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupons.ECouponType>()" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <label asp-for="Discount"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Discount" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <label asp-for="MinimumAmount"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="MinimumAmount" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <label asp-for="IsActive"></label>
                        </div>
                        <div class="col-8">
                            <input type="checkbox" asp-for="IsActive" style="height:30px; width:30px;" />
                        </div>
                    </div>
                </fieldset>
                <div class="form-group row">
                    <div class="col-6 text-right">
                        <input type="submit" value="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-square btn-lg form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success btn-square btn-lg form-control">To Coupons</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

